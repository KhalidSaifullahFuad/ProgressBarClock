<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:innerRadiusRatio="2.5"
            android:shape="ring"
            android:thickness="@dimen/progress_bar_width"
            android:useLevel="false">
            <solid android:color="?attr/progress_bar_bg_color" />
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:innerRadiusRatio="2.6"
                android:shape="ring"
                android:thickness="@dimen/progress_bar_bg_width"
                android:useLevel="true">
                <solid android:color="?attr/progress_bar_color" />
                <corners android:radius="100dp"/>
            </shape>

        </rotate>
    </item>
        <item android:bottom="94dp">
            <shape
                android:innerRadiusRatio="1000"
                android:shape="ring"
                android:thickness="@dimen/ball_width"
                android:useLevel="false">
                <solid android:color="?attr/progress_bar_color" />
            </shape>
        </item>
        <item>
            <rotate>
                <inset android:insetBottom="94dp">
                    <shape
                        android:innerRadiusRatio="1000"
                        android:shape="ring"
                        android:thickness="@dimen/ball_width"
                        android:useLevel="false">
                        <solid android:color="?attr/progress_bar_color" />
                    </shape>
                </inset>
            </rotate>
        </item>
</layer-list>